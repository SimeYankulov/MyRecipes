@page "/"
@inherits RecipesBase

@if(Recipes == null)
{
    <h3>Loading...</h3>

    <DisplaySpinner/>
}
else
{
    <h3 class="mb-5">Recipes</h3>

    var recipeCount = Recipes.Count();

    @if(recipeCount > 0)
    {
        @foreach (var recipeGroup in GetGroupedRecipesByCategory())
        {
           <h4>@GetCategoryName(recipeGroup)</h4>

           <div class="row mt-3">

           <DisplayRecipes Recipes="@recipeGroup.Take(4)"></DisplayRecipes>
                  
           </div>
            <hr class="mb-3"/>
        }
        
    }
}