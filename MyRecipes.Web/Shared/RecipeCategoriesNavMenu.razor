@inherits RecipeCategoriesNavMenuBase
@if (RecipeCategoryDtos == null && ErrorMessage == null)
{
        <h3>Loading..</h3>
}
else if (ErrorMessage != null)
{
        <DisplayError ErrorMessage="@ErrorMessage"/>
}
else
{
    @foreach (var category in RecipeCategoryDtos)
    {
        var link = "/RecipesByCategory/" + category.Id;
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@link">
                        <span class="gg-bowl"></span>&nbsp;@category.Name
                    </NavLink>

                </div>
    }
}
